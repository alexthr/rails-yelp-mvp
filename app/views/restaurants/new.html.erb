<div class="container">
  <%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, as: :select, collection: ["Chinese", "Italian", "Japanese", "French", "Belgian"] %>
  <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
